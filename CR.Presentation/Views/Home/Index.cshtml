<!-- popular Comments -->
@if (Model.CommentForMainViewDtos.Count > 0)
{
    <section class="section section-specialities comment-image">
        <div class="container-fluid">
            <div class="section-header text-center">
                <h2>نظرات کاربران</h2>
                <p class="sub-title">آنچه کاربران درباره چاله چوله میگویند</p>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="doctor-slider slider" dir="rtl" style="width: auto;height: auto">
                        @foreach (var comment in Model.CommentForMainViewDtos)
                        {
                            <!-- Doctor Widget -->
                            <div class="profile-widget pakh" style="box-shadow: 1px 6px 14px rgba(0, 0, 0, 0.2);">
                                <div class="pro-content">
                                    <h3 class="title text-center">"@comment.Message"</h3>
                                    <br />
                                    <p style="color: gray" class="text-center">@comment.FirstName </p>
                                </div>
                            </div>
                            <!-- /Doctor Widget -->
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

}
<!-- /Popular Comments -->
<!-- Blog Section -->
@if (Model.BlogForPresentationDtos.Count > 0)
{
    <section class="section section-blogs">
        <div class="container-fluid">

            <!-- Section Header -->
        <div class="section-header text-center">
                <h2>بلاگ و اخبار</h2>
                <p class="sub-title">لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ و با استفاده از طراحان گرافیک است. چاپگرها و متون بلکه روزنامه و مجله در ستون و سطرآنچنان که لازم است</p>
            </div>
            <!-- /Section Header -->

        <div class="row blog-grid-row">
                @foreach (var blog in Model.BlogForPresentationDtos)
                {
                    <div class="col-md-6 col-lg-3 col-sm-12">

                        <!-- Blog Post -->
                <div class="blog grid-blog">
                            <div class="blog-image">
                                <a asp-controller="Blogs" asp-action="BlogDetails" asp-route-slug="@blog.Slug"><img class="img-fluid" src="~/@blog.PictureSrc" alt="@blog.Title"></a>
                            </div>
                            <div class="blog-content">
                                <ul class="entry-meta meta-item">
                                    <li>
                                        <div class="post-author">
                                            <a asp-controller="Experts" asp-action="ExpertDetails" asp-route-expertInformationId="@blog.AuthorInformationId"><img src="~/@blog.AuthorIconSrc" alt="نویسنده"> <span>@blog.AuthorFullName</span></a>
                                        </div>
                                    </li>
                                    <li><i class="far fa-clock"></i> @blog.PublishDate</li>
                                </ul>
                                <h3 class="blog-title"><a asp-controller="Blogs" asp-action="BlogDetails" asp-route-slug="@blog.Slug"> @blog.Title </a></h3>
                                <p class="mb-0">@blog.ShortDescription</p>
                            </div>
                        </div>
                        <!-- /Blog Post -->
            </div>
                }
            </div>
            <div class="view-all text-center">
                <a asp-area="" asp-controller="Blogs" asp-action="Index" class="btn btn-primary">مشاهده همه</a>
            </div>
        </div>
    </section>
}
<!-- /Blog Section -->
