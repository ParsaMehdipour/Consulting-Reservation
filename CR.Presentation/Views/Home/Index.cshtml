}

<!-- Home Banner -->
<section class="section section-search">
    <div class="container-fluid">
        <div class="banner-wrapper">
            <div class="banner-header text-center">
                <h1>جستجوی پزشک و رزرو نوبت</h1>
                <p>جستجو و کشف بهترین پزشکان، کلینیک‌ها، بیمارستان‌ها و داروخانه‌های نزدیک شما</p>
            </div>

            <!-- Search -->
            <div class="search-box">
                <form asp-controller="Experts" asp-action="Index">
                    <div class="form-group search-location">
                        <input type="text" class="form-control" placeholder="جستجو لوکیشن" name="location" id="location">
                        <span class="form-text">بر اساس لوکیشن</span>
                    </div>
                    <div class="form-group search-info">
                        <input type="text" class="form-control" placeholder="جستجو پزشکان و کلینیک‌ها و بیمارستان‌ها و ..." name="searchKey" id="searchKey">
                        <span class="form-text">مثال: دندان‌پزشکی یا تست قند خون و...</span>
                    </div>
                    <button type="submit" class="btn btn-primary search-btn"><i class="fas fa-search"></i> <span>جستجو</span></button>
                </form>
            </div>
            <!-- /Search -->

        </div>
    </div>
</section>
<!-- /Home Banner -->


