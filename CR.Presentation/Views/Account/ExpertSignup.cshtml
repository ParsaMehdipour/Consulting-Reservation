@using CR.Core.DTOs.Account
@model RegisterExpertViewModel
@{
    Layout = "_Layout";
}

<!-- Page Content -->
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8 offset-md-2">

                <!-- Account Content -->
                <div class="account-content">
                    <div class="row align-items-center justify-content-center">
                        <div class="col-md-7 col-lg-6 login-left">
                            <img src="~/assets/img/login-banner.png" class="img-fluid" alt="Login Banner">
                        </div>
                        <div class="col-md-12 col-lg-6 login-right">
                            <div class="login-header">
                                <h3>ثبت نام پزشک <a asp-controller="Account" asp-action="Signup"> پزشک نیستید؟ </a></h3>
                            </div>

                            <!-- Register Form -->
                            <form asp-controller="Account" asp-action="ExpertSignup" method="post">
                                <div asp-validation-summary="ModelOnly"></div>
                                <div class="form-group form-focus">
                                    <input type="text" class="form-control floating" asp-for="FirstName">
                                    <label class="focus-label"> نام </label>
                                     <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                 <div class="form-group form-focus">
                                    <input type="text" class="form-control floating" asp-for="LastName">
                                    <label class="focus-label"> نام خانوادگی </label>
                                     <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                                <div class="form-group form-focus">
                                    <input type="text" class="form-control floating" asp-for="PhoneNumber">
                                    <label class="focus-label">شماره موبایل </label>
                                     <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="form-group form-focus">
                                    <input type="password" class="form-control floating" asp-for="Password">
                                    <label class="focus-label"> رمزعبور </label>
                                     <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                                 <div class="form-group form-focus">
                                    <input type="password" class="form-control floating" asp-for="ConfirmPassword">
                                    <label class="focus-label"> تکرار رمزعبور </label>
                                     <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="text-right">
                                    <a class="forgot-link" asp-controller="Account" asp-action="Login"> اکانت دارید؟ </a>
                                </div>
                                <button class="btn btn-primary btn-block btn-lg login-btn" type="submit">ثبت‌نام</button>
                            </form>
                            <!-- /Register Form -->

                        </div>
                    </div>
                </div>
                <!-- /Account Content -->

            </div>
        </div>

    </div>

</div>
<!-- /Page Content -->

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}