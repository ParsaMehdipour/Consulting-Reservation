    function Checkout() {
        var checkoutForm = new FormData();

        if (timeOfDayId === 0) {
            swal.fire('هشدار!',
                'لطفا یک زمانبندی را انتخاب کنید',
                'warning');
            return;
        }

        checkoutForm.append("timeOfDayId",timeOfDayId);
        checkoutForm.append("expertInformationId",$("#expertInformationId").val());

        $.ajax({
            type: 'POST',
            url: '@Url.Action("Index", "Checkout")',
            processData: false,
            contentType: false,
            dataType: 'json',
            cache: false,
            data: checkoutForm,
            success: function(data) {
                if (data.isSuccess == true) {
                    swal.fire('موفقیت!',
                        data.message,
                        'success').then(function(isConfirm) {
                        window.location.href = "/Payment?factorNumber=" + data.data;
                    });
                } else {
                    swal.fire('هشدار!',
                        data.message,
                        'warning');
                }
            },
            error: function(request, status, error) {
                alert(request.responseText);
            }
        });
    }

</script>
