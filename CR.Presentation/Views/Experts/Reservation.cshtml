@using CR.Common.Convertor
@model CR.Core.DTOs.Experts.ExpertDetailsForReservationDto
@{
}

<link rel="stylesheet" href="~/assets/css/Reservation.css" />

<!-- Breadcrumb -->
<div class="breadcrumb-bar">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-md-12 col-12">
                <nav aria-label="breadcrumb" class="page-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">خانه</a></li>
                        <li class="breadcrumb-item active" aria-current="page">رزرو نوبت</li>
                    </ol>
                </nav>
                <h2 class="breadcrumb-title">رزرو نوبت</h2>
            </div>
        </div>
    </div>
</div>
<!-- /Breadcrumb -->
<!-- Page Content -->
<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="booking-doc-info">
                            <a href="doctor-profile.html" class="booking-doc-img">
                                <img src="~/@Model.IconSrc" alt="User Image">
                            </a>
                            <div class="booking-info col-md-8">
                                <h4><a href="doctor-profile.html">متخصص @Model.FullName</a></h4>
                                <div class="rating">
                                    <i class="fas fa-star filled"></i>
                                    <i class="fas fa-star filled"></i>
                                    <i class="fas fa-star filled"></i>
                                    <i class="fas fa-star filled"></i>
                                    <i class="fas fa-star"></i>
                                    <span class="d-inline-block average-rating">35</span>
                                </div>
                                <p class="doc-department"><img src="~/@Model.SpecialitySrc" class="img-fluid" alt="Speciality">‌@Model.Speciality</p>
                            </div>
                            <div class="booking-info">
                                <form asp-action="Reservation" asp-controller="Experts" method="post">
                                    <div class="form-group">
                                        <label>تاریخ نوبت</label>
                                        <div class="cal-icon">
                                            <input type="text" class="form-control datetimepicker" id="passedDate" name="passedDate">
                                            <input type="hidden" value="@Model.ExpertInformationId" id="expertInformationId" name="expertInformationId" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="submit-section submit-btn-bottom">
                                            <button type="submit" class="btn btn-primary submit-btn">اعمال تاریخ</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <hr/>
                <div class="wrapper" style="margin-right:31%">
                    <input type="radio" name="select" id="option-1" value="0" checked>
                    <input type="radio" name="select" id="option-2" value="1">
                    <input type="radio" name="select" id="option-3" value="2">
                    <label for="option-1" class="option option-1">
                        <div class="dot"></div>
                        <span>کوتاه مدت</span>
                    </label>
                    <label for="option-2" class="option option-2">
                        <div class="dot"></div>
                        <span>میان مدت</span>
                    </label>
                    <label for="option-3" class="option option-3">
                        <div class="dot"></div>
                        <span>بلند مدت</span>
                    </label>
                </div>
                <hr/>
                <div class="row">
                    @if (Model.ThisDate == null)
                    {
                        <div class="col-12 col-sm-4 col-md-6">
                            <h4 class="mb-1">@DateTime.Now.ToShamsi()</h4>
                            <p class="text-muted">@DateConvertor.GetDayOfWeek(@DateTime.Now)</p>
                        </div>
                    }
                    else
                    {
                        <div class="col-12 col-sm-4 col-md-6">
                            <h4 class="mb-1">@Model.ThisDate.Value.ToShamsi()</h4>
                            <p class="text-muted">@DateConvertor.GetDayOfWeek(@Model.ThisDate.Value)</p>
                        </div>
                    }
                </div>
                <!-- Schedule Widget -->
                <div class="card booking-schedule schedule-widget">
                    <!-- Schedule Header -->
                    <div class="schedule-header">
                        <div class="row">
                            <div class="col-md-12">

                                <!-- Day Slot -->
                                <div class="day-slot">
                                    <ul>
                                        <li class="left-arrow">
                                            <a href="#">
                                                <i class="fa fa-chevron-left"></i>
                                            </a>
                                            @foreach (var day in Model.DayDtos)
                                            {
                                            <li>
                                                <span>@day.dayOfWeek</span>
                                                <span class="slot-date">@day.date_String</span>
                                            </li>
                                            }
                                        <li class="right-arrow">
                                            <a href="#">
                                                <i class="fa fa-chevron-right"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                                <!-- /Day Slot -->

                            </div>
                        </div>
                    </div>
                    <!-- /Schedule Header -->
                    <!-- Schedule Content -->
                    <div class="schedule-cont">
                        <div class="row">
                            <div class="col-md-12">
                                <!-- Time Slot -->
                                <div class="time-slot">
                                    <ul class="clearfix">
                                        @foreach (var day in Model.DayDtos)
                                        {
                                            <li>
                                                @if (day.TimeOfDayDtos.Count > 0)
                                                {
                                                    @foreach (var timeOfDay in day.TimeOfDayDtos)
                                                    {
                                                        <a class="timing" onclick="SetId(@timeOfDay.id)" id="timeOfDay_@timeOfDay.id">
                                                            <span>@timeOfDay.start - @timeOfDay.finish</span>
                                                        </a>
                                                    }
                                                }
                                                else
                                                {
                                                    <button type="button" class="btn btn-block btn-outline-danger active">نوبتی وجود ندارد</button>
                                                }
                                            </li>
                                        }
                                    </ul>
                                </div>
                                <!-- /Time Slot -->

                            </div>
                        </div>
                    </div>
                    <!-- /Schedule Content -->
                    <input type="hidden" value="@Model.ExpertInformationId" id="expertInformationId" />
                </div>
                <!-- /Schedule Widget -->
                <!-- Submit Section -->
                <div class="submit-section proceed-btn text-right">
                    <a onclick="Checkout()" class="btn btn-primary submit-btn">ادامه فرایند خرید</a>
                </div>
                <!-- /Submit Section -->

            </div>
        </div>
    </div>

</div>
<!-- /Page Content -->
