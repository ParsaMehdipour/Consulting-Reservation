@model CR.Core.DTOs.Account.ResetPasswordViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb -->
<div class="breadcrumb-bar">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-md-12 col-12">
                <nav aria-label="breadcrumb" class="page-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">خانه</a></li>
                        <li class="breadcrumb-item active" aria-current="page">داشبورد</li>
                    </ol>
                </nav>
                <h2 class="breadcrumb-title">داشبورد</h2>
            </div>
        </div>
    </div>
</div>
<!-- /Breadcrumb -->
<!-- Page Content -->
<div class="content">
    <div class="container-fluid">
        <div class="row">

            <!-- Profile Sidebar -->
            <div class="col-md-5 col-lg-4 col-xl-3 theiaStickySidebar">
                
                <partial name="ConsumerPanelSideBarMenu"/>

            </div>
            <!-- /Profile Sidebar -->

            <div class="col-md-7 col-lg-8 col-xl-9">

                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12 col-lg-6">
                                <!-- Change Password Form -->
                                <form asp-controller="Account" asp-action="ResetPassword" method="post">
                                    <div asp-validation-summary="ModelOnly"></div>

                                    @if (ViewData["ErrorMessage"] != null)
                                    {
                                        <div class="text-danger">@ViewData["ErrorMessage"]</div>
                                    }

                                    <div class="form-group">
                                        <label>رمزعبور قبل</label>
                                        <input type="password" class="form-control" asp-for="oldPassword">
                                        <span asp-validation-for="oldPassword" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label>رمزعبور جدید</label>
                                        <input type="password" class="form-control" asp-for="newPassword">
                                        <span asp-validation-for="newPassword" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label>تایید رمزعبور</label>
                                        <input type="password" class="form-control" asp-for="confirmNewPassword">
                                        <span asp-validation-for="confirmNewPassword" class="text-danger"></span>
                                    </div>
                                    <div class="submit-section">
                                        <button type="submit" class="btn btn-primary submit-btn">ذخیره تغییرات</button>
                                    </div>
                                </form>
                                <!-- /Change Password Form -->
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Footer{
    <partial name="Footer"/>
}

@section Scripts
{
    <script src="~/assets/js/ConusmerPanel/Account/Account.js"></script>
    <script src="~/assets/js/ConusmerPanel/layout.js"></script>
}
